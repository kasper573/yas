{
  "name": "react-imperative-hook",
  "description": "React hook that provides an imperative interface for spawning and resolving components",
  "keywords": [
    "react",
    "hook",
    "imperative",
    "async",
    "component"
  ],
  "author": "Kasper573",
  "version": "0.1.64",
  "license": "MIT",
  "private": true,
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "require": "./src/index.ts"
    }
  },
  "scripts": {
    "build": "pnpm typecheck && tsup",
    "typecheck": "tsc --noEmit --project tsconfig.json",
    "test": "vitest run",
    "test:watch": "vitest",
    "release": "release-incubation"
  },
  "peerDependencies": {
    "react": "18.2.0",
    "immer": "^10.0.2"
  },
  "devDependencies": {
    "@yas/tsconfig": "workspace:*",
    "@yas/test": "workspace:*",
    "@yas/build": "workspace:*",
    "@yas/scripts": "workspace:*",
    "@types/react": "18.2.37",
    "react": "18.2.0",
    "immer": "^10.0.2"
  }
}
