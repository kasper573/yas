{
  "name": "react-async-modal-hook",
  "description": "React hook that provides an async interface for spawning and resolving components",
  "keywords": [
    "react",
    "async",
    "modal",
    "hook"
  ],
  "sideEffects": false,
  "author": "Kasper573",
  "version": "0.0.5",
  "license": "MIT",
  "private": true,
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "require": "./src/index.ts"
    }
  },
  "scripts": {
    "build": "pnpm typecheck && tsup",
    "typecheck": "tsc --noEmit --project tsconfig.json",
    "test": "pnpm test:unit run && pnpm test:types --run",
    "test:watch": "concurrently -n unit,types \"pnpm test:unit\" \"pnpm test:types\"",
    "test:unit": "vitest",
    "test:types": "vitest typecheck",
    "release": "release-incubation"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "immer": "^10.0.2"
  },
  "devDependencies": {
    "@yas/tsconfig": "workspace:*",
    "@yas/test": "workspace:*",
    "@yas/build": "workspace:*",
    "@yas/scripts": "workspace:*",
    "@types/react": "^18.2.37",
    "react": "^18.2.0",
    "immer": "^10.0.2",
    "concurrently": "8.2.2"
  }
}
