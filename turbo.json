{
  "$schema": "https://turbo.build/schema.json",
  "ui": "stream",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**"],
      "env": ["*"],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env",
        ".env.local",
        ".env.test",
        ".env.development",
        ".env.production"
      ]
    },
    "test": {
      "dependsOn": ["^build", "^test"]
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "dev": {
      // The only reason the dev task is specifying the build task as a dependency is to
      // avoid race conditions for first time runs when first cloning the repo.
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    }
  }
}
