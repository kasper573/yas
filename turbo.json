{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dotEnv": [".env", ".env.local", ".env.development", ".env.production"],
      "dependsOn": ["^build"],
      "outputs": [
        "dist/**",
        "build/**",
        "some-change-to-trigger-turbo-cache-bust"
      ]
    },
    "test": {
      "dependsOn": ["^test"]
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
