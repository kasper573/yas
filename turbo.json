{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dotEnv": [".env", ".env.local", ".env.development", ".env.production"],
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**"]
    },
    "release": {
      "dependsOn": ["build"],
      "cache": false
    },
    "test": {
      "dependsOn": ["^test"],
      "cache": false
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
