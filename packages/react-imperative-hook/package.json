{
  "name": "react-imperative-hook",
  "repository": {
    "type": "git",
    "url": "https://github.com/ksandin/yas.git",
    "directory": "packages/react-imperative-hook"
  },
  "description": "React hook that provides an imperative interface for spawning and resolving components",
  "keywords": [
    "react",
    "hook",
    "imperative",
    "async",
    "component"
  ],
  "author": "Kasper Sandin",
  "version": "0.1.9",
  "license": "MIT",
  "private": true,
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "require": "./src/index.ts"
    }
  },
  "scripts": {
    "build": "pnpm typecheck && tsup",
    "typecheck": "tsc --noEmit --project tsconfig.json",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "release": "publicize-package-json -c \"pnpm publish --no-git-checks\" -d dist"
  },
  "jest": {
    "preset": "@yas/jest/presets/react"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "immer": "^10.0.2"
  },
  "devDependencies": {
    "@yas/tsconfig": "workspace:*",
    "@yas/jest": "workspace:*",
    "@yas/build-tools": "workspace:*",
    "@testing-library/react": "^14.0.0",
    "publicize-package-json": "workspace:*",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "tsup": "^7.1.0"
  }
}
