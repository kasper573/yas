{
  "name": "@yas/ui",
  "version": "0.0.0",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "import": "./src/index.ts"
    },
    "./eslintOverrides": {
      "import": "./eslintOverrides.js",
      "require": "./eslintOverrides.js"
    }
  },
  "license": "MIT",
  "scripts": {
    "build": "storybook build -o dist",
    "dev": "storybook dev -p 6006 --no-open",
    "test": "pnpm test:components && pnpm test:unit",
    "test:watch": "concurrently -n component,unit \"pnpm test:components:watch\" \"pnpm test:unit:watch\"",
    "test:components": "start-server-and-test \"pnpm dev --ci\" http://localhost:6006 test-storybook",
    "test:components:watch": "start-server-and-test \"pnpm dev --ci\" http://localhost:6006 \"test-storybook --watch\"",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest"
  },
  "dependencies": {
    "@vanilla-extract/recipes": "^0.5.0",
    "@vanilla-extract/sprinkles": "^1.6.1",
    "@yas/zod": "workspace:*",
    "clsx": "^1.2.1",
    "react-composable-form": "workspace:*",
    "react-imperative-hook": "workspace:*",
    "vanilla-extract-styled": "workspace:*"
  },
  "devDependencies": {
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@vanilla-extract/css": "^1.13.0",
    "@yas/build-tools": "workspace:*",
    "@yas/tsconfig": "workspace:*",
    "@yas/storybook": "workspace:*",
    "@yas/vitest": "workspace:*",
    "concurrently": "^8.0.1",
    "prop-types": "15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "start-server-and-test": "^2.0.0"
  }
}
