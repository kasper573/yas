{
  "name": "yas",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "apps/*",
    "libraries/*",
    "integrations/*",
    "incubations/*",
    "core/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "release": "turbo run release --concurrency 1",
    "dev": "turbo run dev --concurrency 40",
    "lint": "pnpm eslint . --max-warnings=0",
    "lint:fix": "pnpm eslint . --fix",
    "depcheck": "pnpm exec depcruise . --output-type err-long && assert-dependency-versions --pn react react-dom @types/react @types/react-dom",
    "architecture": "pnpm exec depcruise . --output-type archi | dot -Tsvg -o architecture.svg",
    "typecheck": "typecheck-all-workspaces",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "eslint": "cross-env NODE_OPTIONS=--max_old_space_size=8000 eslint",
    "prepare": "husky"
  },
  "devDependencies": {
    "@yas/scripts": "workspace:*",
    "cross-env": "7.0.3",
    "dependency-cruiser": "16.2.0",
    "eslint-config-yas": "workspace:*",
    "eslint-plugin-yas": "workspace:*",
    "eslint": "^8.48.0",
    "prettier": "^3.0.3",
    "turbo": "1.11.3",
    "husky": "9.0.6",
    "@commitlint/cli": "18.6.0",
    "@commitlint/config-conventional": "18.6.0"
  },
  "engines": {
    "node": "20.10.0"
  },
  "packageManager": "pnpm@8.14.1"
}
