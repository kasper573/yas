{
  "name": "yas",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "libraries/*",
    "core/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --concurrency 30",
    "lint": "pnpm eslint . --max-warnings=0",
    "lint:fix": "pnpm eslint . --fix",
    "depcheck": "assert-workspace-hierarchy \"apps < libraries/core\"",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "eslint": "cross-env NODE_OPTIONS=--max_old_space_size=4096 eslint"
  },
  "devDependencies": {
    "@yas/scripts": "workspace:*",
    "cross-env": "7.0.3",
    "eslint-config-yas": "workspace:*",
    "eslint-plugin-yas": "workspace:*",
    "eslint": "^8.48.0",
    "prettier": "^3.0.3",
    "turbo": "1.10.13"
  },
  "engines": {
    "node": "^18.16.0"
  },
  "packageManager": "pnpm@8.7.1"
}
