{
  "name": "vanilla-extract-constrained",
  "main": "src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "import": "./src/index.ts"
    },
    "./src/createConstrained": {
      "import": "./src/createConstrained.ts",
      "require": "./src/createConstrained.ts"
    }
  },
  "scripts": {
    "build": "tsc --noEmit --project tsconfig.json",
    "test": "pnpm test:unit && pnpm test:types --run",
    "test:watch": "concurrently -n unit,types \"pnpm test:unit --ui\" \"pnpm test:types\"",
    "test:unit": "pnpm playwright test -c playwright-ct.config.js",
    "test:types": "vitest typecheck"
  },
  "peerDependencies": {
    "@vanilla-extract/vite-plugin": "^3.9.0"
  },
  "devDependencies": {
    "@playwright/experimental-ct-react": "1.39.0",
    "@types/react": "18.2.33",
    "@vanilla-extract/css": "^1.6.1",
    "@yas/build": "workspace:*",
    "@yas/tsconfig": "workspace:*",
    "@yas/result": "workspace:*",
    "@yas/test": "workspace:*",
    "concurrently": "^8.2.1",
    "react": "18.2.0",
    "react-dom": "^18.2.0"
  }
}
